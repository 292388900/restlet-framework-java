	<!-- PACKAGE-ZIP target (generation of final Zip file) -->
	<target name="package-zip" description="Generate the final zip file">
		<zip destfile="${dist-zip}/restlet-${version-compact}.zip" basedir="${dist-base}" includes="${dist-path}/**/*" />
	</target>

	<!-- PACKAGE-NSIS target (generation of Windows installer) -->
	<target name="package-nsis" depends="init" if="do-nsis" description="Generate the windows installer">
		<nsis script="${temp}/setup.nsi" verbosity="2" uninstallfilelist="${dist}/uninstall.log">
			<fileset dir="${dist}" includes="**/*" />
		</nsis>
	</target>

</project>
