<module includes="jee, jse" id="gwt" type="integration" package="org.restlet.ext.gwt">
   <name>Restlet Extension - GWT</name>
   <description>
      Server-side integration with GWT.
	</description>
   <distributions>
      <distribution id="classic" />
      <distribution id="maven" />
   </distributions>

   <dependencies>
      <dependency type="library" id="gwt" primary="true" />
      <dependency type="library" id="servlet" includes="jee" maven-scope="provided" />
      <dependency type="module" id="core" />
      <dependency type="module" id="servlet" includes="jee" />
   </dependencies>
   <source edition="jse">
		<files-mappers>
<![CDATA[
      <mapper classname="mapper.ReplaceStringMapper" classpathref="forge-path" from=".MF.jse" to=".MF" />
]]>
		</files-mappers>
		<files-sets>
<![CDATA[
         <exclude name="META-INF/MANIFEST.MF" />
         <exclude name="src/org/restlet/ext/gwt/GwtShellServletWrapper.java" />
]]>
      </files-sets>
   </source>
</module>