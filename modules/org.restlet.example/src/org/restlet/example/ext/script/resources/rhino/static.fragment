<%

// Helper to access the static scope

function getStaticValue(name, getDefaultValue) {
	var value = script.staticScope.get(name);
	if(value == null) {
		value = getDefaultValue();

		// Note: another thread might have changed our value in the meantime.
		// We'll make sure there is no duplication.

		var old = script.staticScope.putIfAbsent(name, value);
		if(old != null) {
			value = old;
		}
	}
	return value;
}

%>