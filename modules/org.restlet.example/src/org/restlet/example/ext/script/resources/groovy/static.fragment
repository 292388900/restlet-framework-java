<%groovy

// Helper to access the static scope

getStaticValue = { name, getDefaultValue ->
	def value = script.staticScope[name]
	if(value == null) {
		value = getDefaultValue()

		// Note: another thread might have changed our value in the meantime.
		// We'll make sure there is no duplication.

		def old = script.staticScope.putIfAbsent(name, value)
		if(old != null) {
			value = old
		}
	}
	return value
}

%>